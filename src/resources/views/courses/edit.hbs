<div class="container">
    <form action="/course/update/{{id_course._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input type="text" class="form-control" name="name" value="{{id_course.name}}" id="name">
    </div>
    <div class="form-group">
      <label for="description">Chi Tiết</label>
      <textarea class="form-control" name="description" id="description">{{id_course.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>


